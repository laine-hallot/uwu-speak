{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "incremental": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/",
    "sourceMap": true
  },
  "exclude": ["./node_modules", "./dist", "**/test/"],
  "files": ["./runner.ts"]
}
